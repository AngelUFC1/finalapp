<div>
  <a href="/">
    Go home
  </a>
</div>

<h1>
  List of EPL coaches
</h1>

<hr>

<form action="/insert_coach" method="post">
  <div>
    <label for="name_box">
      Name
    </label>

    <input type="text" id="name_box" name="query_name">
  </div>

  <div>
    <label for="dob_box">
      Dob
    </label>

    <input type="date" id="dob_box" name="query_dob">
  </div>

  <div>
    <label for="bio_box">
      Bio
    </label>

    <textarea id="bio_box" name="query_bio" rows="3"></textarea>
  </div>

  <div>
    <label for="image_box">
      Image
    </label>

    <input type="text" id="image_box" name="query_image">
  </div>

  <button>
    Create coach
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_coaches.each do |coach| %>
  <tr>
    <td>
      <%= coach.id %>
    </td>

    <td>
      <img src="<%= coach.image %>" style="width:250px;">
    </td>

    <td>
      <%= coach.name %>
    </td>

    <td>
      <%= coach.dob %>
    </td>

    <td>
      <a href="/coaches/<%= coach.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
